<div class="container mt-5 mb-5">
  <h1 class="mb-4 text-center" style="color: #1E3932;">Modifier le repas</h1>

  <div class="card shadow-sm p-4" style="background-color: #FFFACD; border-left: 5px solid #A3CB38;">
    <h5 class="mb-3" style="color: #1E3932;"><strong>Recette :</strong> <%= @choix_recette.recette.nom %></h5>
    <p class="mb-3" style="color: #2e4239;"><strong>Date :</strong> <%= @choix_recette.date.strftime('%A %d %B %Y') %></p>

    <%= form_with model: @choix_recette, local: true do |form| %>
      <div class="form-check mb-4">
        <%= form.check_box :done, class: 'form-check-input' %>
        <%= form.label :done, "Recette réalisée ?", class: 'form-check-label', style: "color: #1E3932;" %>
      </div>

      <div class="d-flex justify-content-between mt-4">
        <%= link_to '⬅️ Retour', choix_recettes_path, class: 'btn btn-supprimer-dark' %>
        <%= form.submit "Mettre à jour ✅", class: 'btn btn-valider-light' %>
      </div>
    <% end %>
  </div>
</div>
