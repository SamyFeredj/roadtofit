<h1>
  Qu'est-ce qu'on mange aujourd'hui ?
</h1>
<div class="parcourir-recettes">
  <%= link_to 'Parcourir les recettes', recettes_path, class: 'btn btn-valider-light' %>
</div>

<div class="container mt-5 mb-5" style="background-color: #FFFACD; border-radius: 12px; padding: 2rem;">
  <h1 class="mb-4 text-center" style="color: #1E3932;">📅 Mes choix de recettes</h1>

  <div class="d-flex justify-content-end mb-4">
    <%= link_to '➕ Ajouter une recette pour aujourd\'hui', new_choix_recette_path,
      class: 'btn btn-valider-light' %>
  </div>

  <div class="table-responsive rounded shadow-sm">
    <table class="table table-hover align-middle">
      <thead style="background-color: #1E3932; color: #FFFACD;">
        <tr>
          <th scope="col">📆 Date</th>
          <th scope="col">🍽 Recette</th>
          <th scope="col">✅ Status</th>
          <th scope="col">⚙️ Actions</th>
        </tr>
      </thead>

      <tbody style="background-color: #FFFFFF;">
        <% choix_recettes.each do |choix| %>
          <tr>
            <td><%= choix.date.strftime('%d/%m/%Y') %></td>
            <td style="color: #1E3932;"><%= choix.recette.nom %></td>
            <td>
              <% if choix.done %>
                <span class="badge" style="background-color: #2ecc71; color: white;">✅ Réalisée</span>
              <% else %>
                <span class="badge" style="background-color: #D1E383; color: #1E3932;">❌ Pas encore</span>
              <% end %>
            </td>
            <td>
              <%= link_to '✏️', edit_choix_recette_path(choix),
                class: 'btn btn-outline-dark btn-sm me-2' %>
              <%= link_to '🗑', choix_recette_path(choix),
                data: { turbo_method: :delete, turbo_confirm: "T'es sûr ?" },
                class: 'btn btn-outline-danger btn-sm' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
