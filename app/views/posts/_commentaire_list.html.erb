<div class="commentaires-container">
  <% @post.commentaires.each do |commentaire| %>
    <div class="commentaire-header">
      <div class="inserer-image">
      <%# TODO %>
      </div>
      <p class="commentaire-username">
        <%= commentaire.user.prenom.capitalize %> <%= commentaire.user.nom.capitalize %>
      </p>
      <p class="commentaire-content">
        <%= commentaire.content %>
        <% if commentaire.user == current_user %>
          <%= link_to post_commentaire_path(@post, commentaire), data: {turbo_method: :delete, turbo_confirm: "Êtes-vous sûr?"} do %>
            <svg width="24" height="21" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512">
              <path d="M135.2 17.7L128 32 32 32C14.3 32 0 46.3 0 64S14.3 96 32 96l384 0c17.7 0 32-14.3 32-32s-14.3-32-32-32l-96 0-7.2-14.3C307.4 6.8 296.3 0 284.2 0L163.8 0c-12.1 0-23.2 6.8-28.6 17.7zM416 128L32 128 53.2 467c1.6 25.3 22.6 45 47.9 45l245.8 0c25.3 0 46.3-19.7 47.9-45L416 128z", fill="#1E3932"/>
            </svg>
          <% end %>
        <% end %>
      </p>
    </div>
  <% end %>
</div>
