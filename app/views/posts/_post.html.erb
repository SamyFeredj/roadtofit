<div class="post-container container bg-white p-3 my-3">
  <%# TODO : retirer container %>
  <div class="post-header">
    <div class="row align-items-center">
      <h3 class="col-10"><%= post.user.prenom.capitalize %> <%= post.user.nom.capitalize %></h3>
      <%= link_to edit_post_path(post), class: "col-1" do %>
        <i class="fa-solid fa-pencil"></i>
      <% end %>
      <%= link_to post_path(post), class: "col-1", data: { turbo_method: :delete, turbo_confirm: "Êtes-vous sûr de vouloir supprimer votre post ?"} do %>
        <i class="fa-solid fa-circle-xmark"></i>
      <% end %>
    </div>
  </div>
    <p><%= post.contenu %></p>
    <% like = Like.where(post_id: post.id, user_id: current_user.id).first %>
    <%= link_to post_like_path(post, like), data: {turbo_method: :patch} do %>
      <% if like.like_flag == 0 %>
        <p><i class="fa-regular fa-heart"></i></p>
      <% else %>
        <p><i class="fa-solid fa-heart"></i></p>
      <% end %>
    <% end %>
  <!-- Bouton pour afficher la modal des commentaires -->
  <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#commentModal_<%= post.id %>">
    <i class="fa-solid fa-comment"></i> Commentaires
  </button>

  <!-- Modal -->
  <div class="modal fade" id="commentModal_<%= post.id %>" tabindex="-1" aria-labelledby="commentModalLabel_<%= post.id %>" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content" data-controller="comment">
        <div class="modal-header">
          <h5 class="modal-title" id="commentModalLabel_<%= post.id %>">Ajouter un commentaire</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>

        <div class="modal-body">
          <!-- Liste des commentaires -->
        <div data-target="comment.commentList" id="comments_<%= post.id %>">
          <%= render partial: "commentaires/commentaire", collection: post.commentaires, as: :commentaire, locals: { post: post } %>
        </div>


          <!-- Formulaire d'ajout de commentaire -->
          <%= simple_form_for([post, Commentaire.new], html: { data: { action: "submit->comment#addComment" } }) do |f| %>
            <%= f.text_area :content, placeholder: "Ajouter un commentaire", data: { target: "comment.contentInput" } %>
            <%= f.submit "Poster", class: "btn btn-primary mt-3" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
