<%= turbo_frame_tag 'modal' do %>
  <div class="modal fade" tabindex="-1" role="dialog" aria-hidden="true" data-bs-backdrop="true"
data-controller="modal" data-modal-target="modal">
    <div class="modal-dialog modal-dialog-centered modal-xl">
      <div class="modal-content">
        <div class="modal-header position-relative d-flex justify-content-between">
          <h5 class="modal-title font-18">Commentaires</h5>
          <button type="button" class="btn" data-action="modal#close" aria-label="Close">
            X
          </button>
        </div>
        <div class="modal-body">
          <div class="container-fluid">
            <%= render "commentaires/commentaire", post: @post %>
            <%= render "commentaires/form", commentaire: @commentaire, post: @post %>
            <%= yield %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
