<div id="carouselExampleCaptions" class="carousel slide" data-bs-interval="7000" data-bs-touch="true" data-bs-ride="carousel" >

  <div class="carousel-indicators">
    <% num = recettes.count %>
    <% (0..num-1).each do |index| %>
      <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="<%=index%>" class="<%= 'active' if index == 0 %>" aria-current="true" aria-label="Slide <%=index+1%>"></button>
    <% end %>
  </div>


  <div class="carousel-inner">
    <% recettes.each_with_index do |recette, index| %>
      <div class="carousel-item  <%= "active" if index == 0 %>">
        <%= render "recettes/best_recettes_slide", recette: recette %>
      </div>
    <% end %>
  </div>

</div>
