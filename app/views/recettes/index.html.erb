<div class="container">
    <div class="row justify-content-center">
    <div class="col-12 my-3">
      <%= form_with url: recettes_path, method: :get, class: "d-flex" do %>
        <%= text_field_tag :query,
              params[:query],
              class: "form-control",
              placeholder: "Rechercher une recette"
          %>
        <%= submit_tag "Rechercher", name: "", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
  <div class="row">
    <% @recettes.each do |recette| %>
      <div class="col-12 text-center">
        <%= image_tag url_for(recette.photo), style: "width:300px;height:300px;object-size:cover;object-position:center;"  %>
        <h4><%= link_to recette.nom, recette_path(recette), class: "text-decoration-none" %></h4>
      </div>
    <% end %>
  </div>
</div>
