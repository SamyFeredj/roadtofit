<div class="container">
    <div class="row justify-content-center">
    <div class="col-12 my-3">
      <%= form_with url: recettes_path, method: :get, class: "d-flex", class: "search_bar" do %>
        <%= text_field_tag :query,
              params[:query],
              class: "form-control",
              placeholder: "Rechercher une recette",
              autocomplete: "off",
              autofocus: true %>
      <% end %>
    </div>
  </div>
  <div class="row">
    <% @recettes.each do |recette| %>
      <div class="col-12 text-center recettes-card">
        <%= image_tag url_for(recette.photo), class: "recettes-img" %>
        <h4><%= link_to recette.nom, recette_path(recette), class: "text-decoration-none" %></h4>
      </div>
    <% end %>
  </div>
</div>
